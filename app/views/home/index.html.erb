<div ng-controller="HomeCtrl">
  <div class="row-fluid">
    <div class="well clearfix">
      <div class="span6">
        <%= render :partial => 'company_search_form' %>
      </div>
      <div class="span6">
        <%= render :partial => 'email_address_verification_form' %>
      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span4">
      <h4 class="text-center alert alert-info">LinkedIn</h4>

      <div ng-hide="linkedInResultsLoaded" class="text-center">
        <p><%= image_tag 'progress-indeterminate-light.gif' %></p>

        <p class="muted">
          <small>This will only take a second</small>
        </p>
      </div>
      <div class="media-object" ng-repeat="result in linkedInResults" ng-show="linkedInResultsLoaded">
        <div class="media-body">
          <h4><a href="{{result.uri}}" ng-bind-html-unsafe="result.title"></a></h4>

          <p class="text-success">
            <small>{{result.uri}}</small>
          </p>
          <p ng-bind-html-unsafe="result.content"></p>
        </div>
      </div>
    </div>
    <div class="span4">
      <h4 class="text-center alert alert-info">Google News</h4>

      <div ng-hide="googleNewsFeedResultsLoaded" class="text-center">
        <p><%= image_tag 'progress-indeterminate-light.gif' %></p>

        <p class="muted">
          <small>This will only take a second</small>
        </p>
      </div>
      <div class="media-object" ng-repeat="result in googleNewsFeedResults" ng-show="googleNewsFeedResultsLoaded">
        <div class="media-body">
          <h4><a href="{{result.uri}}" ng-bind-html-unsafe="result.title"></a></h4>

          <p class="text-success">
            <small>{{result.uri}}</small>
          </p>
          <p ng-bind-html-unsafe="result.content"></p>
        </div>
      </div>
    </div>
    <div class="span4">
      <h4 class="text-center alert alert-info">Twitter Feeds</h4>

      <div ng-hide="twitterSearchResultsLoaded" class="text-center">
        <p><%= image_tag 'progress-indeterminate-light.gif' %></p>

        <p class="muted">
          <small>This will only take a second</small>
        </p>
      </div>
      <div ng-show="twitterSearchResultsLoaded" class="media-object" ng-repeat="result in twitterSearchResults">
        <div class="media-body">
          <h4>{{result.user.name}}
            <small>@{{result.user.screen_name}}</small>
          </h4>
          <p ng-bind-html-unsafe="result.text"></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <h4 class="text-center alert alert-info">Email Format</h4>

      <div ng-hide="emailFormatSearchResultsLoaded" class="text-center">
        <p><%= image_tag 'progress-indeterminate-light.gif' %></p>

        <p class="muted">
          <small>This will only take a second</small>
        </p>
      </div>
      <div ng-show="emailFormatSearchResultsLoaded">
        <ul class="unstyled">
          <li ng-repeat="result in emailFormatSearchResults">{{result}}</li>
        </ul>
      </div>
    </div>
  </div>
</div>

